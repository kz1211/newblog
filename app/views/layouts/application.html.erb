<!DOCTYPE html>
<html>
  <head>
    <title>Newblog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded" >
      <div class="container"
        <ul class="nav navbar-nav" >
          <% if user_signed_in? %>
            <li>
              <%= link_to "Изменить профиль",    edit_users_path,  class: 'btn btn-outline-primary'   %>
            </li>
            <li>
              <%= link_to "Выйти", destroy_user_session_path, method: :delete,  class: 'btn btn-outline-primary'  %>
            </li>
            <li>
              <%= link_to "Все Посты", posts_path, class: 'btn btn-outline-primary' %>
            </li>
            <li>
              <%= link_to "Новый пост", new_post_path,  class: 'btn btn-outline-primary'  %>
            </li>
            <% else %>
            <li>
               <%= link_to "Регистрация", new_user_registration_path, class: 'btn btn-outline-primary' %>
            </li>
            <li>
              <%= link_to "Войти", new_user_session_path, class: 'btn btn-outline-primary pull-xs-right' %>
            </li>
            <li>
              <%= link_to "Все Посты", posts_path, class: 'btn btn-outline-primary' %>
            </li>
          <% end %>
        </ul>
    </div>
   </nav>


  <div class="container main">
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |name, message| %>
          <div class="alert alert-<%= name %>">
            <%= message %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-9">
        <%= yield %>
      </div>

    </div>
  </body>
</html>
